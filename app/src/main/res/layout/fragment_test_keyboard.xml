<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test_keyboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="2"
    tools:context=".ui.fragment.test.keyboard.TestKeyboardFragment">

    <RelativeLayout
        android:id="@+id/test_keyboard_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/test_keyboard_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:justificationMode="inter_word"
            android:text="@string/test_keyboard_during_task_description"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceHeadlineMedium" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/test_keyboard_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/test_keyboard_description"
            android:layout_centerInParent="true"
            android:justificationMode="inter_word"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceHeadlineMedium" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/test_keyboard_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />
</GridLayout>