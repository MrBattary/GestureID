<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/test_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fragment_content_margin_small"
            tools:context=".ui.fragment.test.begin.TestBeginFragment">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/test_end_finish_button"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/test_end_description"
                android:layout_marginTop="@dimen/fragment_margin_horizontal"
                android:text="@string/button_test_end" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/test_end_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/test_end_heading"
                android:layout_marginTop="@dimen/fragment_margin_vertical_small"
                android:justificationMode="inter_word"
                android:text="@string/test_begin_description"
                android:textAppearance="?attr/textAppearanceBodyLarge" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/test_end_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/test_end_header"
                android:textAppearance="?attr/textAppearanceHeadlineLarge" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/test_end_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:padding="@dimen/fragment_margin_horizontal"
        android:visibility="gone">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:indeterminate="true" />
    </RelativeLayout>
</RelativeLayout>

