<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test_gate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fragment_content_margin_small"
    tools:context=".ui.fragment.main.test.gate.TestGateFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/test_gate_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/home_header"
        android:textAppearance="?attr/textAppearanceHeadlineLarge" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/test_gate_start_button"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/test_gate_heading"
        android:layout_marginTop="@dimen/fragment_margin_horizontal"
        android:text="@string/button_test_start" />
</RelativeLayout>