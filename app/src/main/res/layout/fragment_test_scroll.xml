<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fragment_content_margin_small"
        android:id="@+id/test_scroll"
        android:orientation="vertical"
        tools:context=".ui.fragment.test.scroll.TestScrollFragment">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/test_scroll_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_margin_vertical_small"
            android:justificationMode="inter_word"
            android:text="@string/test_scroll_during_task_description"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/test_scroll_button_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_margin_vertical"
            android:text="@string/button_test_scroll_click_me_button" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/test_scroll_pointer_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_margin_vertical"
            android:justificationMode="inter_word"
            android:text="@string/test_scroll_button_end"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/test_scroll_button_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/test_scroll_vertical_slider"
            android:text="@string/button_test_scroll_click_me_button" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/test_scroll_pointer_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/test_scroll_vertical_slider"
            android:justificationMode="inter_word"
            android:text="@string/test_scroll_button_end"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/test_scroll_button_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/test_scroll_vertical_slider"
            android:text="@string/button_test_scroll_click_me_button" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/test_scroll_pointer_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/test_scroll_vertical_slider"
            android:justificationMode="inter_word"
            android:text="@string/test_scroll_button_end"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/test_scroll_button_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/test_scroll_vertical_slider"
            android:text="@string/button_test_scroll_click_me_button" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/test_scroll_pointer_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/test_scroll_vertical_slider"
            android:justificationMode="inter_word"
            android:text="@string/test_scroll_button_end"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/test_scroll_button_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/test_scroll_vertical_slider"
            android:text="@string/button_test_scroll_click_me_button" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/test_scroll_pointer_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/test_scroll_vertical_slider"
            android:justificationMode="inter_word"
            android:text="@string/test_scroll_button_end"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/test_scroll_next_task_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_margin_vertical"
            android:text="@string/button_test_next_task" />
    </LinearLayout>
</ScrollView>
